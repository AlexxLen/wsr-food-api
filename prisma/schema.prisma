// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFEatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}

model Dish {
  dish String @id @default(auto()) @map("_id") @db.ObjectId
  category String
  name String
  price String
  icon String
  version String
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  password String
  login String

  @@unique([email])
}
